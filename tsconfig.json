{
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "build/js",
    "rootDir": "src",
    "lib": [
      "es6"
    ],
    "downlevelIteration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
